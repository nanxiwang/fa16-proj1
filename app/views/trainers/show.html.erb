<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @trainer == current_trainer %>
<%= button_to "New Pokemon", new_path, :class => "button medium", :method => :get %>
<% end %>

<table>
	<th>Pokemon:</th>
	<tr> 
		<td>Name</td>
		<td>Level</td>
		<td>Health</td>
	</tr>
	<% @trainer.pokemons.each do |p| %>
		<tr>
			<td><%= p.name %></td>  
			<td><%= p.level %></td>
			<td><%= p.health %> 
					<%= button_to "Damage", damage_path(id: p), :class => "button small", :method => :patch %></td>
		</tr>
	<% end %>
</table>

